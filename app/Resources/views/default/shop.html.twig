{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <h1 style="display: inline-block">Store information:</h1>
        <div class="float-right">
            <a href="{{ path('party') }}" class="btn btn-primary">Add party</a>
            <button class="btn btn-primary createShop"><i class="fas fa-plus"></i></button>
        </div>

        <div class="accordion" id="accordionExample">
            {% for shop in shops %}
                <div class="card">
                    <div class="card-header" id="heading{{ shop.id }}">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{ shop.id }}" aria-expanded="false" aria-controls="collapse{{ shop.id }}">
                                Shop â„–{{ shop.id }}
                            </button>
                            <button class="btn btn-danger float-right"><i class="fas fa-trash-alt fa-sm"></i></button>
                        </h5>
                    </div>
                    <div id="collapse{{ shop.id }}" class="collapse hidden" aria-labelledby="heading{{ shop.id }}" data-parent="#accordionExample">
                        <div class="card-body">
                            {{ render(controller(
                                'AppBundle:Shop:show', {shop_id: shop.id}
                            )) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
{% endblock %}